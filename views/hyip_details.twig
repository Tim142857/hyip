{% extends 'layout.twig' %}
{% block body %}
<style>
.checked {
  color: orange;
}
h2 {
  font-weight: bold;
  margin-bottom: 16px;
}
.logo{
  margin-bottom: 30px;
  margin-top: 80px;
}
img{
  margin-bottom: 80px;
}
.bloc{
  padding: 10px 10px 30px 10px;
}
.table-infos{
  margin-top: 70px;
}
.table-dark {
  background-color: #616161!important;
}
</style>
<div class="container">
  <div class="row text-center" style="padding-top:80px;">
    <h1 class="d-block mx-auto"><b>{{hyip.name|upper}}</b></h1>
  </div>

  <div class="row bloc">
    <div class="col-sm text-center">
      <img src="/{{ getHyipLogoFileName(hyip) }}" class="img-fluid logo" alt="Responsive image">

      <table class="table table-borderless">
        <tr>
          <th scope="row">Serieux</th>
          <td>{{ getStars(hyip.serious,5) }}</td>
        </tr>
        <tr>
          <th scope="row">Rentabilité</th>
          <td>{{ getStars(hyip.profitability,5) }}</td>
        </tr>
        <tr>
          <th scope="row">Simplicité</th>
          <td>{{ getStars(hyip.simplicity,5) }}</td>
        </tr>
        <tr>
          <th scope="row">Parrainage</th>
          <td>{{ getStars(hyip.sponsorship,5) }}</td>
        </tr>
      </table>
    </div>
    <div class="col-sm"><table class="table table-dark table-infos">
      <tbody>
        <tr>
          <th scope="row">Nom</th>
          <td>{{ hyip.name }}</td>
        </tr>
        <tr>
          <th scope="row">Statut</th>
          <td style="text-align: center;font-weight:bold;background-color:{% if hyip.payeur %}#68FF33{% else %}#FF5533{% endif %}">
            {% if hyip.payeur %}Payeur{% else %}Non payeur{% endif %}
          </td>
        </tr>
        <tr>
          <th scope="row">lien</th>
          <td><a href="{{ hyip.url }}" target="_blank">inscription</a></td>
        </tr>
        <tr>
          <th scope="row">dépot minimal</th>
          <td>{{ hyip.minimalDeposit }}$</td>
        </tr>
        <tr>
          <th scope="row">Méthodes de dépot</th>
          <td>{{ hyip.modesDepot }}</td>
        </tr>
        <tr>
          <th scope="row">Méthodes de retrait</th>
          <td>{{ hyip.modesRetrait }}</td>
        </tr>
        <tr>
          <th scope="row">Investissement conseillé</th>
          <td>{{ hyip.percentage }}% du capital</td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row bloc">
  <div class="col-sm">
    <h2>Présentation</h2>
    {{ hyip.presentation }}
  </div>
</div>

<div class="row bloc">
  <div class="col-sm">
    <h2>Plans</h2>
    {{ hyip.plans }}
  </div>
</div>

<div class="row bloc">
  <div class="col-sm">
    <h2>Affiliation</h2>
    {{ hyip.affiliation }}
  </div>
</div>

<div class="row bloc">
  <div class="col-sm">
    <h2>Notre avis</h2>
    {{ hyip.avis }}
  </div>
</div>

<div class="row bloc">
  <div class="col-sm">
    <h2>Preuves de paiement</h2>
  </div>
</div>

<div class="row bloc">
  {% for image in hyip.images %}
  {% if image.logo == false %}
  <div class="col-sm text-center" style="padding:20px">
    <img src="/{{ image.fileName }}" class="img-fluid">
  </div>
  {% endif %}
  {% endfor %}
</div>


</div>

{% endblock %}

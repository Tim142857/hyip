{% extends 'layoutAdmin.twig' %}
{% block body %}
<br><br>
<div class="container">
  <div class="row">
    <h2>HYIPS   <a href="admin/hyip/create"><i class="fa fa-plus"></i></a></h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nom</th>
          <th>Modifier</th>
          <th>Supprimer</th>
        </tr>
      </thead>
      <tbody>
        {% for hyip in hyips %}
        <tr>
          <td>{{ hyip.name }}</td>
          <td><a href="admin/hyip/edit/{{hyip.id}}"><i class="fa fa-edit"></i></a></td>
          <td><a href="admin/hyip/delete/{{hyip.id}}"><i class="fa fa-trash"></i></a></td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}

{% extends 'layout.twig' %}

{% block body %}


<div class="w3-row-padding">
  {% for hyip in hyips %}
  <div class="w3-third w3-container w3-margin-bottom">
    <a href="/hyip/{{ hyip.id }}">
      <div style="border: 1px black solid; padding:15px; height: 180px; background-color:#505050" class="d-flex flex-wrap align-items-center">
      <img src="/images/{{hyip.logo}}" alt="{{hyip.name}}" class="img-fluid d-block mx-auto">
    </div>
    </a>
    <div class="w3-container w3-white">
      <a href="/hyip/{{ hyip.id }}">
        <h2 style="color: black; padding:12px 0px;"><b>{{ hyip.name }}</b></h2>
      </a>
      <p>{{ hyip.presentation|slice(0,350) }}...</p>
    </div>
  </div>
  {% endfor %}
</div>

<!-- Pagination -->
<div class="w3-center w3-padding-32">
  <div class="w3-bar">
    <a href="#" class="w3-bar-item w3-button w3-hover-black">&laquo;</a>
    <a href="#" class="w3-bar-item w3-black w3-button">1</a>
    <a href="#" class="w3-bar-item w3-button w3-hover-black">2</a>
    <a href="#" class="w3-bar-item w3-button w3-hover-black">3</a>
    <a href="#" class="w3-bar-item w3-button w3-hover-black">4</a>
    <a href="#" class="w3-bar-item w3-button w3-hover-black">&raquo;</a>
  </div>
</div>




{% endblock %}

    <div class="w3-bar-block">
      <a href="/blog" onclick="w3_close()" class="w3-bar-item w3-button w3-padding"><i class="fas fa-book fa-fw w3-margin-right"></i>BLOG</a>
      <a href="/hyips" onclick="w3_close()" class="w3-bar-item w3-button w3-padding"><i class="fas fa-dollar-sign fa-fw w3-margin-right"></i>HYIPS</a>
      <a href="/immobilier" onclick="w3_close()" class="w3-bar-item w3-button w3-padding"><i class="fas fa-building fa-fw w3-margin-right"></i>IMMOBILIER</a>
      <a href="/trading" onclick="w3_close()" class="w3-bar-item w3-button w3-padding"><i class="fas fa-hand-holding-usd fa-fw w3-margin-right"></i>TRADING</a>
      {% if user %}
      {% if user.role == "admin" %}
      <a href="/admin" onclick="w3_close()" class="w3-bar-item w3-button w3-padding"><i class="fas fa-user-shield fa-fw w3-margin-right"></i>ADMIN</a>
      {% endif %}
      {% endif %}
    </div>
    <div class="w3-panel w3-large" style="display:none">
      <i class="fab fa-facebook-official w3-hover-opacity"></i>
      <i class="fab fa-instagram w3-hover-opacity"></i>
      <i class="fab fa-snapchat w3-hover-opacity"></i>
      <i class="fab fa-pinterest-p w3-hover-opacity"></i>
      <i class="fab fa-twitter w3-hover-opacity"></i>
      <i class="fab fa-linkedin w3-hover-opacity"></i>
    </div>
  </nav>

  <!-- Overlay effect when opening sidebar on small screens -->
  <div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>



  <!-- !PAGE CONTENT! -->

  <div class="w3-main" style="margin-left:300px">
    {% block header %}{% endblock %}
    <header id="portfolio">
      <a href="#"><img src="/images/hyip_banniere.png" style="width:120px;" class="w3-circle w3-right w3-margin w3-hide-large w3-hover-opacity"></a>
      <span class="w3-button w3-hide-large w3-xxlarge w3-hover-text-grey" onclick="w3_open()"><i class="fa fa-bars"></i></span>
      <div class="w3-container">

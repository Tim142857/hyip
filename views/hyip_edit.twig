{% extends 'layout.twig' %}

{% block body %}

<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>

<div class="container">
  <div class="row" style="padding: 80px;">
    <div class="col-sm">
      <form action="/hyip/create" method="POST">
        <div class="form-group">
          <label for="name">Nom</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Entrer le nom">
        </div>
        <div class="form-group">
          <label for="url">Lien</label>
          <input type="text" class="form-control" id="url" name="url" placeholder="Entrer le lien">
        </div>
        <div class="form-group">
          <label for="confiance">Confiance</label>
          <input type="number" class="form-control" id="confiance" name="confiance" placeholder="Entrer la confiance" min="0" max="5">
        </div>
        <div class="form-group">
          <label for="percentage">Pourcentage a investir</label>
          <input type="number" class="form-control" id="percentage" name="percentage" placeholder="Entrer le pourcentage" min="0" max="100">
        </div>
        <div class="form-group">
          <label for="minimalDeposit">Dépot minimal</label>
          <input type="number" class="form-control" id="minimalDeposit" name="minimalDeposit" placeholder="Entrer le depot minimal" min="0" max="1000">
        </div>
        <div class="form-group">
          <label for="modesDepot">modes de dépôt</label>
          <input type="text" class="form-control" id="modesDepot" name="modesDepot" placeholder="Entrer les différents modes de dépôt">
        </div>
        <div class="form-group">
          <label for="modesRetrait">modes de retrait</label>
          <input type="text" class="form-control" id="modesRetrait" name="modesRetrait" placeholder="Entrer les différents modes de retrait">
        </div>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="status" name="status">
          <label class="form-check-label" for="status">Payeur?</label>
        </div>
        <div class="form-group">
          <label for="presentation">Présentation</label>
          <textarea class="form-control content" id="presentation" name="presentation" rows="5"></textarea>
        </div>
        <div class="form-group">
          <label for="plans">Plans</label>
          <textarea class="form-control content" id="plans" name="plans" rows="5"></textarea>
        </div>
        <div class="form-group">
          <label for="affiliation">Affiliation</label>
          <textarea class="form-control content" id="affiliation" name="affiliation" rows="5"></textarea>
        </div>
        <div class="form-group">
          <label for="avis">Notre avis</label>
          <textarea class="form-control content" id="avis" name="avis" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Valider</button>
      </form>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
      $('textarea').summernote({
        height: 250
      });
  });
</script>
{% endblock %}
